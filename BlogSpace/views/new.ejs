<% include partials/header %>


<div class="ui inverted main text container segment">
    <div class="ui huge header centered">New Blog</div>
    <form class="ui inverted form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Post Title" required></input>
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="blog[image]" placeholder="Post Image (url)" required></input>
        </div>
        <div class="field">
            <label>Blog Post</label>
            <textarea name="blog[body]" placeholder="Write the post here" required></textarea>
        </div>
        <div class="centered">
            <input class="ui big inverted teal basic button" type="submit">
        </div>
    </form>
</div>

<% include partials/footer %>