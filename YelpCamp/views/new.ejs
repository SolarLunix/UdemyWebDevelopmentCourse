<% include partials/header %>
<div class="container">
    <div class="row">
        <h1>New Campground</h1>
        <div class="newcampform">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Campground Name" required></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="img" placeholder="Image URL" required></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="desc" placeholder="Campground Description" required></input>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Submit</button>
                </div>
            </form>
        </div>
        <br>
        <a href="/campgrounds">Return to Campground List</a>
    </div>
</div>

<% include partials/footer %>