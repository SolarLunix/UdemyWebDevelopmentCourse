<% include partials/header %>
   
<div class="ui container">  
    <h1 class="ui huge header centered">Blogs</h1>
    
    <% blogs.forEach(function(blog){ %>
        <div>
            <img class="i-image" src="<%= blog.image %>"></img>
            <h2><%= blog.title %></h2>
            <p><%= blog.body.substring(0, 100) %> . . .</p>
            <a href="blogs/<%= blog._id %>"> View More</a>
        </div>
    <% }); %>
</div>

<% include partials/footer %>