<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">About</li>
                <li class="list-group-item">Map</li>
                <li class="list-group-item">Reviews</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= camp.img %>"></img>
                <h4 class="pull-right">$9.00/night</h4>
                <h4><a href="#"><%= camp.name %></a></h4>
                <%= camp.desc %>
            </div>
            <div class="well">
                <div class="text-right"><a href="/campgrounds/<%= camp._id %>/comments/new" class="btn btn-info">Add New Comment</a><br><br></div>
                <% camp.comments.forEach(function(comment){ %>
                    <p><strong><%= comment.author %></strong><span class="pull-right">10 days ago</span></p>
                    <p><%= comment.text %></p>
                <% }); %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>